{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.37.4.10188",
      "templateHash": "1168074040703031376"
    }
  },
  "parameters": {
    "clusterName": {
      "type": "string",
      "defaultValue": "aks-example-cluster",
      "metadata": {
        "description": "Name of the AKS cluster"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "nodeCount": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Node count for the default node pool"
      }
    },
    "nodeVmSize": {
      "type": "string",
      "defaultValue": "Standard_D4s_v3",
      "metadata": {
        "description": "VM size for the nodes"
      }
    },
    "kubernetesVersion": {
      "type": "string",
      "defaultValue": "1.30.0",
      "metadata": {
        "description": "Kubernetes version"
      }
    },
    "gitRepoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/yondercloud/deploy-to-azure-example.git",
      "metadata": {
        "description": "Git repository URL for Flux"
      }
    },
    "gitBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "Git branch to track"
      }
    },
    "gitPath": {
      "type": "string",
      "defaultValue": "./k8s-manifests/",
      "metadata": {
        "description": "Path in the repository where manifests are located"
      }
    },
    "gitAuthType": {
      "type": "string",
      "defaultValue": "https",
      "metadata": {
        "description": "Git repository authentication (none, ssh, https)"
      }
    },
    "gitUsername": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Git username (for HTTPS auth)"
      }
    },
    "gitPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Git password/token (for HTTPS auth)"
      }
    },
    "gitSshPrivateKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "SSH private key (for SSH auth)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2025-06-01",
      "name": "[parameters('clusterName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "kubernetesVersion": "[parameters('kubernetesVersion')]",
        "dnsPrefix": "[format('{0}-dns', parameters('clusterName'))]",
        "agentPoolProfiles": [
          {
            "name": "nodepool1",
            "count": "[parameters('nodeCount')]",
            "vmSize": "[parameters('nodeVmSize')]",
            "osType": "Linux",
            "mode": "System",
            "enableAutoScaling": true,
            "minCount": 3,
            "maxCount": 5,
            "maxPods": 80
          }
        ],
        "servicePrincipalProfile": {
          "clientId": "msi"
        },
        "addonProfiles": {
          "azurepolicy": {
            "enabled": true
          }
        },
        "networkProfile": {
          "networkPlugin": "azure",
          "serviceCidr": "10.0.0.0/16",
          "dnsServiceIP": "10.0.0.10"
        },
        "autoUpgradeProfile": {
          "upgradeChannel": "stable"
        },
        "disableLocalAccounts": false
      }
    },
    {
      "type": "Microsoft.KubernetesConfiguration/extensions",
      "apiVersion": "2024-11-01",
      "scope": "[format('Microsoft.ContainerService/managedClusters/{0}', parameters('clusterName'))]",
      "name": "flux",
      "properties": {
        "extensionType": "microsoft.flux",
        "autoUpgradeMinorVersion": true,
        "releaseTrain": "Stable",
        "scope": {
          "cluster": {
            "releaseNamespace": "flux-system"
          }
        },
        "configurationSettings": {
          "helm-controller.enabled": "true",
          "source-controller.enabled": "true",
          "kustomize-controller.enabled": "true",
          "notification-controller.enabled": "true",
          "image-automation-controller.enabled": "false",
          "image-reflector-controller.enabled": "false"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
      ]
    },
    {
      "type": "Microsoft.KubernetesConfiguration/fluxConfigurations",
      "apiVersion": "2025-04-01",
      "scope": "[format('Microsoft.ContainerService/managedClusters/{0}', parameters('clusterName'))]",
      "name": "flux-config",
      "properties": {
        "scope": "cluster",
        "namespace": "flux-system",
        "sourceKind": "GitRepository",
        "suspend": false,
        "gitRepository": {
          "url": "[parameters('gitRepoUrl')]",
          "timeoutInSeconds": 600,
          "syncIntervalInSeconds": 600,
          "repositoryRef": {
            "branch": "[parameters('gitBranch')]"
          },
          "httpsUser": "[if(equals(parameters('gitAuthType'), 'https'), parameters('gitUsername'), null())]"
        },
        "configurationProtectedSettings": "[if(and(equals(parameters('gitAuthType'), 'https'), not(empty(parameters('gitPassword')))), createObject('httpsKey', parameters('gitPassword')), if(and(equals(parameters('gitAuthType'), 'ssh'), not(empty(parameters('gitSshPrivateKey')))), createObject('sshPrivateKey', parameters('gitSshPrivateKey')), createObject()))]",
        "kustomizations": {
          "infra": {
            "path": "[parameters('gitPath')]",
            "dependsOn": [],
            "timeoutInSeconds": 600,
            "syncIntervalInSeconds": 600,
            "retryIntervalInSeconds": 300,
            "prune": true,
            "force": false
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]",
        "[extensionResourceId(resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName')), 'Microsoft.KubernetesConfiguration/extensions', 'flux')]"
      ]
    }
  ],
  "outputs": {
    "aksClusterName": {
      "type": "string",
      "value": "[parameters('clusterName')]"
    },
    "aksClusterFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName')), '2025-06-01').fqdn]"
    },
    "aksClusterResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
    },
    "fluxExtensionName": {
      "type": "string",
      "value": "flux"
    },
    "fluxConfigurationName": {
      "type": "string",
      "value": "flux-config"
    },
    "kubeConfigCommand": {
      "type": "string",
      "value": "[format('az aks get-credentials --resource-group {0} --name {1}', resourceGroup().name, parameters('clusterName'))]"
    }
  }
}